<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= documentacao.tituloDocumento %></title>
    
    <style>
        @page {
            size: A4;
            margin: 2cm;
        }

        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            .no-print {
                display: none !important;
            }
            h1, h2, h3 {
                page-break-after: avoid;
            }
            .section {
                page-break-inside: avoid;
            }
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', 'Arial', sans-serif;
            line-height: 1.6;
            color: #333;
            background: #fff;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
        }

        /* Cabe√ßalho do Documento */
        .doc-header {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            color: white;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .doc-header h1 {
            font-size: 2.2em;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .doc-info {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            margin-top: 15px;
            font-size: 0.9em;
        }

        .doc-badge {
            background: rgba(255,255,255,0.2);
            padding: 8px 15px;
            border-radius: 20px;
            display: inline-block;
            margin: 5px;
        }

        /* √çndice */
        .index {
            background: #f8f9fa;
            padding: 25px;
            border-left: 4px solid #0d6efd;
            margin-bottom: 30px;
            border-radius: 5px;
        }

        .index h2 {
            color: #0d6efd;
            margin-bottom: 15px;
            font-size: 1.5em;
        }

        .index ol {
            padding-left: 25px;
        }

        .index li {
            margin-bottom: 8px;
            color: #555;
        }

        .index a {
            color: #0d6efd;
            text-decoration: none;
            transition: all 0.3s;
        }

        .index a:hover {
            color: #0a58ca;
            text-decoration: underline;
        }

        /* Se√ß√µes */
        .section {
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e0e0e0;
        }

        .section:last-child {
            border-bottom: none;
        }

        h2 {
            color: #0d6efd;
            font-size: 1.8em;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 3px solid #0d6efd;
            font-weight: 600;
        }

        h3 {
            color: #495057;
            font-size: 1.4em;
            margin-top: 20px;
            margin-bottom: 10px;
            font-weight: 600;
        }

        h4 {
            color: #6c757d;
            font-size: 1.2em;
            margin-top: 15px;
            margin-bottom: 8px;
            font-weight: 600;
        }

        /* Conte√∫do - Info Geral */
        .info-list {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin: 15px 0;
        }

        .info-list ul {
            list-style: none;
            padding: 0;
        }

        .info-list li {
            padding: 8px 0;
            border-bottom: 1px solid #dee2e6;
        }

        .info-list li:last-child {
            border-bottom: none;
        }

        .info-list strong {
            color: #0d6efd;
            display: inline-block;
            min-width: 180px;
        }

        /* Credenciais */
        .credentials {
            background: #fff3cd;
            border: 2px solid #ffc107;
            border-left: 5px solid #ffc107;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .credentials::before {
            content: "‚ö†Ô∏è CREDENCIAIS DE ACESSO";
            display: block;
            font-weight: bold;
            color: #856404;
            margin-bottom: 10px;
            font-size: 1.1em;
        }

        .credentials pre {
            background: white;
            padding: 15px;
            border-radius: 5px;
            border: 1px solid #ffc107;
            font-family: 'Courier New', monospace;
            font-size: 0.95em;
            line-height: 1.8;
            color: #333;
            overflow-x: auto;
        }

        /* C√≥digo/Mapa de Rede */
        .code-block {
            background: #2d2d2d;
            color: #f8f8f2;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
            border-left: 5px solid #0d6efd;
        }

        .code-block pre {
            font-family: 'Consolas', 'Courier New', monospace;
            font-size: 0.9em;
            line-height: 1.6;
            overflow-x: auto;
            white-space: pre;
        }

        /* Imagens */
        .image-container {
            text-align: center;
            margin: 30px 0;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .image-container img {
            max-width: 100%;
            height: auto;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .image-caption {
            margin-top: 10px;
            font-style: italic;
            color: #6c757d;
            font-size: 0.9em;
        }

        /* Texto Bruto */
        .raw-text {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            border-left: 4px solid #6c757d;
            margin: 15px 0;
            line-height: 1.8;
        }

        /* Se√ß√µes Aninhadas */
        .nested-section {
            margin-left: 20px;
            padding-left: 20px;
            border-left: 3px solid #e0e0e0;
        }

        /* Rodap√© */
        .doc-footer {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 2px solid #dee2e6;
            text-align: center;
            color: #6c757d;
            font-size: 0.9em;
        }

        .footer-info {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin-top: 15px;
        }

        .footer-info div {
            margin: 5px 15px;
        }

        /* Bot√µes de A√ß√£o */
        .action-bar {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            display: flex;
            gap: 10px;
        }

        .btn {
            background: #0d6efd;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .btn:hover {
            background: #0a58ca;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
        }

        .btn-secondary {
            background: #6c757d;
        }

        .btn-secondary:hover {
            background: #5a6268;
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .doc-header h1 {
                font-size: 1.5em;
            }
            
            .info-list strong {
                min-width: 120px;
            }

            .nested-section {
                margin-left: 10px;
                padding-left: 10px;
            }
        }
    </style>
</head>
<body>

<div class="action-bar no-print">
    <button class="btn" onclick="window.print()">üñ®Ô∏è Imprimir/PDF</button>
    <button class="btn btn-secondary" onclick="window.close()">‚úñÔ∏è Fechar</button>
</div>

<div class="container">
    <!-- Cabe√ßalho do Documento -->
    <div class="doc-header">
        <h1><%= documentacao.tituloDocumento %></h1>
        <div class="doc-info">
            <div class="doc-badge">
                üìã ID: <%= documentacao.identificador %>
            </div>
            <div class="doc-badge">
                üìÖ <%= new Date(documentacao.ultimaAtualizacao).toLocaleDateString('pt-BR') %>
            </div>
            <div class="doc-badge">
                üè¢ Infinitibank
            </div>
        </div>
    </div>

    <!-- √çndice -->
    <% const secoes = documentacao.secoes || []; %>
    <% if (secoes.length > 0) { %>
    <div class="index">
        <h2>üìë √çndice</h2>
        <ol>
            <% secoes.forEach((s, i) => { %>
                <li>
                    <a href="#section-<%= i %>"><%= s.tituloSecao %></a>
                    <% if (s.secoesAninhadas && s.secoesAninhadas.length > 0) { %>
                        <ol style="margin-top: 5px;">
                            <% s.secoesAninhadas.forEach((sub, j) => { %>
                                <li><a href="#section-<%= i %>-<%= j %>"><%= sub.tituloSecao %></a></li>
                            <% }); %>
                        </ol>
                    <% } %>
                </li>
            <% }); %>
        </ol>
    </div>
    <% } %>

    <!-- Conte√∫do Principal -->
    <% if (secoes.length > 0) { %>
        <% secoes.forEach((s, i) => { %>
            <div class="section" id="section-<%= i %>">
                <h2><%= i + 1 %>. <%= s.tituloSecao %></h2>
                
                <% if (s.subtituloSecao) { %>
                    <h3><%= s.subtituloSecao %></h3>
                <% } %>

                <%- renderConteudo(s.tipoConteudo, s.conteudo) %>

                <!-- Se√ß√µes Aninhadas -->
                <% if (s.secoesAninhadas && s.secoesAninhadas.length > 0) { %>
                    <div class="nested-section">
                        <% s.secoesAninhadas.forEach((sub, j) => { %>
                            <div id="section-<%= i %>-<%= j %>" style="margin-top: 25px;">
                                <h3><%= i + 1 %>.<%= j + 1 %>. <%= sub.tituloSecao %></h3>
                                
                                <% if (sub.subtituloSecao) { %>
                                    <h4><%= sub.subtituloSecao %></h4>
                                <% } %>

                                <%- renderConteudo(sub.tipoConteudo, sub.conteudo) %>

                                <!-- Mais n√≠veis aninhados (recursivo) -->
                                <% if (sub.secoesAninhadas && sub.secoesAninhadas.length > 0) { %>
                                    <div class="nested-section">
                                        <% sub.secoesAninhadas.forEach((subsub, k) => { %>
                                            <div style="margin-top: 20px;">
                                                <h4><%= i + 1 %>.<%= j + 1 %>.<%= k + 1 %>. <%= subsub.tituloSecao %></h4>
                                                <%- renderConteudo(subsub.tipoConteudo, subsub.conteudo) %>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        <% }); %>
    <% } else { %>
        <div class="section">
            <p style="text-align: center; color: #6c757d; padding: 40px;">
                ‚ÑπÔ∏è Este documento n√£o possui se√ß√µes cadastradas.
            </p>
        </div>
    <% } %>

    <!-- Rodap√© -->
    <div class="doc-footer">
        <strong>Documenta√ß√£o T√©cnica - Infinitibank</strong>
        <div class="footer-info">
            <div>
                <strong>Identificador:</strong> <%= documentacao.identificador %>
            </div>
            <div>
                <strong>√öltima Atualiza√ß√£o:</strong> 
                <%= new Date(documentacao.ultimaAtualizacao).toLocaleString('pt-BR') %>
            </div>
            <div>
                <strong>Gerado em:</strong> <%= new Date().toLocaleString('pt-BR') %>
            </div>
        </div>
    </div>
</div>

<%
// Fun√ß√£o auxiliar para renderizar conte√∫do
function renderConteudo(tipo, conteudo) {
    if (!conteudo) return '';
    
    let html = '';
    
    switch(tipo) {
        case 'infoGeral':
            if (conteudo.textoBruto) {
                html += `<div class="raw-text">${conteudo.textoBruto.replace(/\n/g, '<br>')}</div>`;
            }
            if (conteudo.detalhes && conteudo.detalhes.length > 0) {
                html += '<div class="info-list"><ul>';
                conteudo.detalhes.forEach(d => {
                    html += `<li><strong>${d.rotulo}:</strong> ${d.valor}</li>`;
                });
                html += '</ul></div>';
            }
            break;
            
        case 'credenciais':
            html += '<div class="credentials">';
            if (conteudo.textoBruto) {
                html += `<pre>${conteudo.textoBruto}</pre>`;
            } else if (conteudo.detalhes && conteudo.detalhes.length > 0) {
                html += '<pre>';
                conteudo.detalhes.forEach(d => {
                    html += `${d.rotulo}: ${d.valor}\n`;
                });
                html += '</pre>';
            }
            html += '</div>';
            break;
            
        case 'mapaRede':
        case 'blocoCodigo':
            html += '<div class="code-block">';
            html += `<pre>${conteudo.textoBruto || 'Nenhum conte√∫do fornecido.'}</pre>`;
            html += '</div>';
            break;
            
        case 'imagem':
            if (conteudo.urlImagem) {
                html += '<div class="image-container">';
                html += `<img src="${conteudo.urlImagem}" alt="${conteudo.altImagem || 'Imagem'}">`;
                if (conteudo.altImagem) {
                    html += `<div class="image-caption">${conteudo.altImagem}</div>`;
                }
                html += '</div>';
            }
            if (conteudo.textoBruto) {
                html += `<div class="raw-text">${conteudo.textoBruto.replace(/\n/g, '<br>')}</div>`;
            }
            break;
    }
    
    return html;
}
%>

</body>
</html>